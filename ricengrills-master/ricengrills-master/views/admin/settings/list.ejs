<%-include('../shared/head-panel.ejs')%>
    <!-- ########## START: MAIN PANEL ########## -->
    <div class="br-mainpanel">
        <div class="br-pageheader pd-y-15 pd-l-20">
            <nav class="breadcrumb pd-0 mg-0 tx-12">
                <a class="breadcrumb-item" href="<%=app_url%>/dashboard">
                    <%=SITE_NAME%>
                </a>
                <span class="breadcrumb-item active">General Settings</span>
            </nav>
        </div>
        <!-- br-pageheader -->
        <div class="pd-x-20 pd-sm-x-30 pd-t-20 pd-sm-t-30">
            <h5 class="tx-gray-800 mg-b-5">General Settings</h4>
        </div>

        <div class="br-pagebody">
            <form action="">
                <div class="d-flex align-items-center justify-content-end bg-gray-100 ht-md-80  pd-x-20 mg-t-10">
                    <div class="d-md-flex pd-y-20 pd-md-y-0 col-md-6">
                        <a href="<%=app_url%>/shifts/new" type="reset" class="btn btn-danger pd-y-13 pd-x-20 bd-0 mg-md-r-10 mg-t-10 mg-md-t-0 tx-uppercase tx-11 tx-spacing-2">
                            <i class="fa fa-plus"></i> Add Shift
                        </a>
                    </div>
                </div>
            </form>
            <table class="table table-bordered bg-white border-top-1 border border-light">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Food price</th>
                        <th>Delivery charge</th>
                        <th>GST(%)</th>
                    </tr>
                </thead>
                <tbody>
                    <td>1</td>
                    <td><%= price.food %></td>
                    <td><%= setting.delivery_charge %></td>
                    <td><%= setting.gst %> %</td>
                    <td> <a href="<%=app_url%>/settings/edit" class="btn btn-sm btn-info submitBtn">
                            <i class="fa fa-edit"></i>
                         </a>
                </td>
                </tbody>
            </table>
        </div>
        <!-- br-pagebody -->
    </div>
    <!-- br-mainpanel -->
    <!-- ########## END: MAIN PANEL ########## -->
    <%-include('../shared/scripts.ejs')%>
    <%-include('../shared/footer-panel.ejs')%>