<div id="vehicleChangeModal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content tx-size-sm">
            <div class="modal-body tx-center pd-y-20 pd-x-20">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <form id="mainForm" action="javascript:;">
                    <div class="form-layout form-layout-4">
                        <h6 class="tx-gray-800 tx-uppercase tx-bold tx-14 mg-b-10">Change vehicle</h6>
                        <p class="mg-b-30 tx-gray-600">Please make sure the vehicle is not assigned to other drivers.</p>
                        <div class="row">
                            <label class="col-sm-4 form-control-label">Vehilce: <span class="tx-danger">*</span></label>
                            <input type="hidden" name="driver" id="modal_driver">
                            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                <select class="form-control select2-show-search" data-placeholder="Choose vehicle" id="modal_vehicle" name="vehicle">
                                    <option label="Choose one"></option>
                                    <%
                                        vehicles.forEach(vehicle=>{
                                            %>
                                             <option value="<%=vehicle._id%>"><%=vehicle.registration_number%></option>
                                            <%
                                        })
                                    %>
                                  </select>
                            </div>
                        </div>
                        <div class="form-layout-footer mg-t-30">
                            <button class="btn btn-info" type="submit">Submit Form</button>
                            <a class="btn btn-secondary" href="">Cancel</a>
                        </div>
                        <!-- form-layout-footer -->
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>